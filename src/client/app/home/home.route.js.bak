(function () {
  'use strict';

  angular
    .module('doneYet.home')
    .config(HomeConfig);

    HomeConfig.$inject = [ 
      '$stateProvider',
      '$urlRouterProvider'
    ];

    function HomeConfig($stateProvider, $urlRouterProvider) {
      $stateProvider 
        .state('homePage', {
          url: '/',
          views: {
            'doneYetContent': {
              templateUrl: 'app/home/home.template.html',
              controller: 'HomeController',
              controllerAs: 'vm'
            }
          }
        });
     
      // all unknown routes go to homepage
      $urlRouterProvider.otherwise('/');
    }
})();
